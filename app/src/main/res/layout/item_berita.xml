<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/itemBerita"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorForm"
        android:padding="10dp">

    <ImageView
        android:id="@+id/imagenews"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="@color/abuLight"
        android:src="@drawable/icon_phone"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/judul_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBg"
            android:text="Judul Berita Terkini"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tgl_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBg"
            android:layout_margin="5dp"
            android:text="Day, Date Month Year" />
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>